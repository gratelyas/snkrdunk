.content
  .wrap-1200
    .content-main
      .comment-list
        %h2.title みんなの投稿
        .tag-wrapper
        .comment-box
          .comment-square
            - @comments.each do |comment|
              .comment-content
                .comment-image
                  = link_to image_tag(comment.image.to_s), post_comment_path(comment.post_id, comment.id)
                .comment-text
                  = comment.text.truncate(15)
                .comment-title
                  - @posts.first(1).each do |post|
                    = link_to comment.post.title, post_path(post.id)
                
        
      .post-list-wrapper
        %h2.title 新着スニーカー・記事  
        .post-squares
          - @posts.first(9).each do |post|
            .post-list
              = link_to image_tag(post.image.to_s), post_path(post.id)
              %h3.post-title
                = link_to post.title, post_path(post.id)
              %p.post-subtitle
                = post.subtitle
          
    .content-side サイドバーのコンテンツ
      

     